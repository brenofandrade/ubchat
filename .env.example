# Oracle Database Configuration
ORACLE_USER=your_username
ORACLE_PASSWORD=your_password
ORACLE_DSN=localhost:1521/XEPDB1
ORACLE_TABLE=documents

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_environment
PINECONE_INDEX_NAME=ubchat-documents

# OpenAI Configuration (for embeddings and context generation)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Alternative: Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Chunking Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CHUNK_SIZE=2000

# Context Generation Configuration
USE_LLM_CONTEXT=true
CONTEXT_PROMPT_TEMPLATE=default
BATCH_SIZE=10

# Logging
LOG_LEVEL=INFO
LOG_FILE=indexer.log
